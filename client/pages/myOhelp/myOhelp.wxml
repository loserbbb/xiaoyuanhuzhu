<view class="container"bindtap='toast2'>
	<!-- <view class="container-body"> -->
		<view class="my-reserve-list">
			<view class="my-reserve-item" wx:for="{{reservelist}}" wx:key="{{item.id}}">
				<view class="my-reserve-img">
					<image src="{{item.imgurl}}" mode="aspectFill"></image>
				</view>
				<view class="my-reserve-text">
					<view class="my-reserve-title">{{item.name}}</view>
					<text>发布时间：{{item.time}}</text>
					<text>发布人：{{item.reserver}}</text>
          <text>积分:{{item}}</text>
				</view>
			</view>
		</view>
	<!-- </view> -->
</view>