.headImage {
  width: 10vw;
  height: 10vw;
  margin-top: 5rpx;
  margin-left: 2vw;
  float: left;
  border-radius: 20px;
  border: 1px solid rgba(0, 0, 0, 0.2);
}

.newsImage {
  width: 25vw;
  height: 25vw;
  margin-top: 5rpx;
  margin-left: 15rpx;
  float: left;
  border-radius: 20px;
  background-color: #fafafa;
  text-align: center;
}

.newsImage1 {
  width: 25vw;
  height: 25vw;
  margin-top: 5rpx;
  margin-right: 15rpx;
  float: right;
  border-radius: 20px;
  background-color: #fafafa;
}

.headImage1 {
  width: 10vw;
  height: 10vw;
  margin-top: 5rpx;
  margin-right: 15rpx;
  float: right;
  border-radius: 20px;
  border: 1px solid rgba(0, 0, 0, 0.2);
}

.textBox {
  display: flex;
  flex-direction: row;
  text-align: left;
  max-width: 72vw;
  border-radius: 5px;
  font-size: 13px;
  line-height: 26px;
  margin: 2vw 10px 5px;
  min-height: 8vw;
  min-width: 10vw;
  padding: 0 5px;
  border: 1px solid rgba(0, 0, 0, 0.2);
}

.fr {
  float: right;
  background: paleturquoise;
}

.fl {
  float: left;
  background: #eee;
}

.imageBox {
  display: block;
  height: auto;
  width: 70%;
  border-radius: 5px;
  margin-top: 3vw;
  box-sizing: border-box;
}

.imagefr {
  float: right;
  margin-right: 2vw;
}

.imagefl {
  float: left;
  margin-left: 2vw;
}

.message {
  float: left;
  border-radius: 3px;
  margin-left: 4%;
  height: 70rpx;
  width: 65%;
  font-size: 14px;
  border: 1px solid rgba(0, 0, 0, 0.2);
  margin-top: 5px;
}

.messageButton {
  float: left;
  margin-top: 10rpx;
  margin-left: 10rpx;
  width: 13%;
  height: 78rpx;
  border: none;
  padding: 0;
  font-size: 14px;
  background-color: #aeeeee;
  overflow: hidden;
}

.handleBox {
  width: 100%;
  height: 10vw;
  position: fixed;
  bottom: 0;
  background: #efefef;
  border-top: 1px solid #ddd;
  padding-bottom: 20rpx;
}

.fx-zx {
  padding-top: 10rpx;
  padding-right: 3%;
  position: static;
  float: right;
  background-size: 100%;
  margin: 0 auto;
}

.fx-zx button {
  width: 78rpx;
  height: 78rpx;
  border: none;
  padding: 0;
}

.fx-zx image {
  width: 78rpx;
  height: 78rpx;
}

.timetext {
  text-align: center;
  padding: 5rpx 20rpx 5rpx 20rpx;
  width: 100%;
  color: #ccc;
  font-size: 26rpx;
  float: left;
}

.botton {
  height: 50px;
  width: 100%;
  background-color: #fff;
}

.one {
  width: 100%;
  height: auto;
}
